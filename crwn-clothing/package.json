{
  "name": "crwn-clothing-server",
  "version": "1.0.0",
  "engines": {
    "node": "v12.13.1",
    "npm": "6.12.1"
  },
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "eslintConfig": {
    "settings": {
      "react": {
        "version": "999.999.999"
      }
    }
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "1.7.4",
    "cors": "^2.8.5",
    "dotenv": "7.0.0",
    "express": "^4.16.4",
    "node-sass": "^7.0.0",
    "react-scripts": "^3.4.1",
    "stripe": "6.28.0",
    "yarn": "^1.22.4"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "nodemon": "^2.0.3"
  }
}
